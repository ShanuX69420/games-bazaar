# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-generate-a-new-one
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Settings (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/gamers_market


# reCAPTCHA Settings
RECAPTCHA_PUBLIC_KEY=your-public-key
RECAPTCHA_PRIVATE_KEY=your-private-key

# Email Settings
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Redis Settings (for production)
REDIS_URL=redis://localhost:6379/0

# Google Cloud Storage Settings for Images
USE_GCS_FOR_NEW_IMAGES=True
GS_BUCKET_NAME=your-gcs-bucket-name
GS_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json
GS_CUSTOM_ENDPOINT=https://images.yourdomain.com